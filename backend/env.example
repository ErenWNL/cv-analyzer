# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cv_analyzer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cv_analyzer
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=cv-analyzer-api
JWT_AUDIENCE=cv-analyzer-users

# File Upload Configuration
MAX_FILE_SIZE=10485760
SCAN_FOR_VIRUSES=false
UPLOAD_PATH=./uploads
TEMP_PATH=./uploads/temp
CV_UPLOAD_PATH=./uploads/cvs

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# Email Configuration (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@cv-analyzer.com

# AI/ML Service Configuration (if using external AI services)
OPENAI_API_KEY=your-openai-api-key
AI_SERVICE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4

# External Services
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Development Configuration
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
